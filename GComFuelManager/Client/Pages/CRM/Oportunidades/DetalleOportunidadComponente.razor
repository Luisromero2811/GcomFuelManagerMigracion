@page "/crm/oportunidad/{Id:int}"
@inject IRepositorio http
@inject SweetAlertService swal
@inject IJSRuntime js
@attribute [Authorize(Roles = "Admin, VER_DETALLE_OPORTUNIDAD")]

<AuthorizeView Roles="Admin, VER_DETALLE_OPORTUNIDAD">
    <Authorized>
        <Card HeaderClass="d-flex justify-content-between">
            <Header>
                <div>
                    <b>Detalle oportunidad</b>
                </div>
                <div>
                    <button class="g-1 btn gcom-bg-amarillo" onclick="history.back();">
                        <i class="fa fa-solid fa-arrow-left" /> Volver
                    </button>
                </div>
            </Header>
            <Body>
                <Card HeaderText="Datos principales">
                    <Body>
                        <div class="col-12 row">
                            <div class="col-md-4 col-12">
                                <label><b>Nombre de oportunidad:</b></label>
                                <p>@detalle.Nombre_Opor</p>
                            </div>
                            <div class="col-md-4 col-12">
                                <label><b>Origen de oportunidad:</b></label>
                                <p>@detalle.OrigenProducto?.Valor</p>
                            </div>
                            <div class="col-md-4 col-12">
                                <label><b>Tipo de producto:</b></label>
                                <p>@detalle.TipoProducto?.Valor</p>
                            </div>
                            <div class="col-md-4 col-12">
                                <label><b>Cuenta:</b></label>
                                <p>@detalle.CRMCliente?.Nombre</p>
                            </div>
                            <div class="col-md-4 col-12">
                                <label><b>Vendedor:</b></label>
                                <AuthorizeView Roles="Admin, VER_DETALLE_VENDEDORES">
                                    <Authorized Context="VERDETALLEVENDEDOR">
                                        <p>
                                            <NavLink href=@($"crm/vendedor/{detalle.VendedorId}")>@detalle.Vendedor?.Fullname</NavLink>
                                        </p>
                                    </Authorized>
                                    <NotAuthorized Context="VERDETALLEVENDEDOR">
                                        <p>@detalle.Vendedor?.Fullname</p>
                                    </NotAuthorized>
                                </AuthorizeView>
                            </div>
                            <div class="col-md-4 col-12">
                                <label><b>Equipo:</b></label>
                                <AuthorizeView Roles="Admin, VER_DETALLE_EQUIPO">
                                    <Authorized Context="VERDETALLEQEUIPO">
                                        <div class="d-flex">
                                            <div class="my-auto" style="background-color:@detalle.Equipo?.Color;width:1rem;height:1rem;border-radius:1rem;margin-right:.2rem;"></div>
                                            <NavLink href=@($"crm/equipo/{@detalle.EquipoId}")>
                                                <p class="my-auto">@detalle.Equipo?.Nombre</p>
                                            </NavLink>
                                        </div>
                                    </Authorized>
                                    <NotAuthorized Context="VERDETALLEQEUIPO">
                                        <div class="d-flex">
                                            <div class="my-auto" style="background-color:@detalle.Equipo?.Color;width:1rem;height:1rem;border-radius:1rem;margin-right:.2rem;"></div>
                                            <p class="my-auto">@detalle.Equipo?.Nombre</p>
                                        </div>
                                    </NotAuthorized>
                                </AuthorizeView>
                            </div>
                        </div>
                    </Body>
                </Card>
                <Card HeaderText="Datos de contacto">
                    <Body>
                        <div class="col-12 row">
                            <div class="col-md-4 col-12">
                                <label><b>Nombre</b></label>
                                <p>@detalle.Contacto?.Nombre @detalle.Contacto?.Apellidos</p>
                            </div>
                            <div class="col-md-4 col-12">
                                <label><b>Correo</b></label>
                                <p>@detalle.Contacto?.Correo</p>
                            </div>
                            <div class="col-md-4 col-12">
                                <label><b>Teléfono móvil</b></label>
                                <p>@detalle.Contacto?.Tel_Movil</p>
                            </div>
                            <div class="col-md-4 col-12">
                                <label><b>Teléfono oficina</b></label>
                                <p>@detalle.Contacto?.Tel_Oficina</p>
                            </div>
                        </div>
                    </Body>
                </Card>
                <Card HeaderText="Detalle económico">
                    <Body>
                        <div class="col-12 row">
                            <div class="col-md-4 col-12">
                                <label><b>Unidad de medida:</b></label>
                                <p>@detalle.UnidadMedida?.Valor</p>
                            </div>
                            <div class="col-md-4 col-12">
                                <label><b>Cantidad de la oportunidad:</b></label>
                                <p>@detalle.CantidadLts.ToString("N", CultureInfo.InvariantCulture)</p>
                            </div>
                            <div class="col-md-4 col-12">
                                <label><b>Precio producto MXN por Lts:</b></label>
                                <p>$@detalle.PrecioLts.ToString("N", CultureInfo.InvariantCulture)</p>
                            </div>
                            <div class="col-md-4 col-12">
                                <label><b>Total de litros:</b></label>
                                <p>@detalle.TotalLts.ToString("N", CultureInfo.InvariantCulture)</p>
                            </div>
                            <div class="col-md-4 col-12">
                                <label><b>Periodo:</b></label>
                                <p>@detalle.Periodo?.Valor</p>
                            </div>
                            <div class="col-md-4 col-12">
                                <label><b>Importe total:</b></label>
                                <p>$@detalle.ValorOportunidad.ToString("N", CultureInfo.InvariantCulture)</p>
                            </div>
                        </div>
                    </Body>
                </Card>
                <Card HeaderText="Datos adicionales">
                    <Body>
                        <div class="col-12 row">
                            <div class="col-md-4 col-12">
                                <label><b>Cantidad de estaciones:</b></label>
                                <p>@detalle.CantidadEstaciones</p>
                            </div>
                            <div class="col-md-4 col-12">
                                <label><b>Forma de pago:</b></label>
                                <p>@detalle.FormaPago?.Valor</p>
                            </div>
                            <div class="col-md-4 col-12">
                                <label><b>Días de pago:</b></label>
                                <p>@detalle.DiasCredito?.Valor</p>
                            </div>
                            <div class="col-md-4 col-12">
                                <label><b>Modelo de venta:</b></label>
                                <p>@detalle.ModeloVenta?.Valor</p>
                            </div>
                            <div class="col-md-4 col-12">
                                <label><b>Volumen:</b></label>
                                <p>@detalle.Volumen?.Valor</p>
                            </div>
                            <div class="col-md-4 col-12">
                                <label><b>Etapa de venta:</b></label>
                                <p>@detalle.EtapaVenta?.Valor</p>
                            </div>
                            <div class="col-md-4 col-12">
                                <label><b>Probabilidad de cierre %:</b></label>
                                <p>@detalle.Probabilidad %</p>
                            </div>
                            <div class="col-md-4 col-12">
                                <label><b>Fecha de Seguimiento:</b></label>
                                <p>@detalle.FechaCierre</p>
                            </div>
                            <div class="col-md-4 col-12">
                                <label><b>Relación comercial:</b></label>
                                <p>@detalle.Tipo?.Valor</p>
                            </div>
                        </div>
                    </Body>
                </Card>
                <Card BodyClass="col-12 row" HeaderClass="d-flex justify-content-between">
                    <Header>
                        <b>Documento relacionado</b>
                        <AuthorizeView Roles="Admin, VER_DETALLE_DOCUMENTO">
                            <Authorized Context="VERDETALLEDOC">
                                <div class="col-md-2 col-6">
                                    <button class="col-12 btn gcom-bg-amarillo" @onclick="@(()=>DescargarDocumento(detalle.Documento?.Id,
                                                                                                                   detalle.Documento?.NombreDocumento,
                                                                                                                   detalle.Documento?.TipoDocumento))">
                                        <i class="fa fa-solid fa-download" /> Descargar
                                    </button>
                                </div>
                            </Authorized>
                        </AuthorizeView>
                    </Header>
                    <Body>
                        <div class="col-md-4 col-12">
                            <label><b>Documento</b></label>
                            <AuthorizeView Roles="Admin, VER_DETALLE_DOCUMENTO">
                                <Authorized Context="VERDETALLEDOC">
                                    <NavLink href="@($"crm/documento?{nameof(CRMDocumentoDTO.Id)}={detalle.Documento?.Id}")">
                                        <p>@detalle.Documento?.NombreDocumento</p>
                                    </NavLink>
                                </Authorized>
                                <NotAuthorized Context="VERDETALLEDOC">
                                    <p>@detalle.Documento?.NombreDocumento</p>
                                </NotAuthorized>
                            </AuthorizeView>
                        </div>
                        <div class="col-md-4 col-12">
                            <label><b>Descripción</b></label>
                            <p>@detalle.Documento?.Descripcion</p>
                        </div>
                        <div class="col-md-4 col-12">
                            <label><b>Versión</b></label>
                            <p>@detalle.Documento?.Version</p>
                        </div>
                    </Body>
                </Card>
            </Body>
        </Card>
    </Authorized>
</AuthorizeView>

@code {
    [Parameter] public int Id { get; set; }
    CRMOportunidadDetalleDTO detalle = new();

    bool loading_info = false;

    protected override async Task OnParametersSetAsync()
    {
        await ObtenerOportunidad();
    }

    private async Task ObtenerOportunidad()
    {
        try
        {
            loading_info = true;
            var response = await http.Get<CRMOportunidadDetalleDTO>($"api/crmoportunidad/{Id}/detalle");
            if (response.Error)
            {
                loading_info = false;
                var message = await response.ObtenerMensajeError();
                await swal.FireAsync("Error", message, SweetAlertIcon.Error);
            }
            else
            {
                loading_info = false;
                detalle = response.Response;
            }
        }
        catch (Exception e)
        {
            loading_info = false;
            await swal.FireAsync("Error", e.Message, SweetAlertIcon.Error);
        }

    }

    private async Task DescargarDocumento(int? id, string? Nombre, string? extension)
    {
        var response = await http.Get<CRMDocumentoDTO>($"api/crmfile/download/{id}");
        if (response.Error)
        {

            var message = await response.ObtenerMensajeError();
            await swal.FireAsync("Error", message, SweetAlertIcon.Error);
        }
        else
        {
            await js.GuardarComo(response.Response.NombreDocumento, response.Response.InfoBytes);
        }
    }
}
