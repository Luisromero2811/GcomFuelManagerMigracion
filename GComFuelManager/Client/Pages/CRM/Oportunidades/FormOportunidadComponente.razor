                                <InputDate Type="InputDateType.Date" @bind-Value="Oportunidad.FechaCaducidad" class="form-control" />
                                <ValidationMessage For="@(()=>Oportunidad.FechaCaducidad)" />
                            </div>
                            <div class="col-md-4 col-12">
                                <label>Versión de documento</label>
                                <InputText @bind-Value="Oportunidad.Version" class="form-control" />
                                <ValidationMessage For="@(()=>Oportunidad.Version)" />
                            </div>
                            <div class="col-md-4 col-12">
                                <label>Descripcion del documento</label>
                                <InputTextArea @bind-Value="Oportunidad.Descripcion" class="form-control" />
                                <ValidationMessage For="@(()=>Oportunidad.Descripcion)" />
                            </div>
                            <div class="col-md-4 col-12">
                                <Subir_Archivo TResponse="CRMDocumentoDTO" URL="api/crmfile" Accept=".pdf, .png, .jpg, .xlsx, .xls, .doc, .docx" Texto_Label="Documento relacionado"
                                               MaxSize="2" MaxAllowedFiles="1" Subida_Completa="DocumentoRelacionadoSubido" />
                            </div>
                            <div class="col-md-4 col-12">
                                <Subir_Archivo TResponse="CRMDocumentoDTO" URL="api/crmfile" Accept=".pdf, .png, .jpg, .xlsx, .xls, .doc, .docx" Texto_Label="Documento de revision"
                                               MaxSize="2" MaxAllowedFiles="1" Subida_Completa="DocumentoRevisionSubido" />
                            </div>
                        </Body>
                    </Card>
                    <div class="col-12">
                        <div class="col-3">
                            <button type="submit" class="btn gcom-bg-amarillo col-12">
                                <i class="fa fa-solid fa-floppy-disk" />
                                Guardar
                                @if (loading_save)
                                {
                                    <SpinnerLoading />
                                }
                            </button>
                        </div>
                    </div>
                </EditForm>
            </Body>
        </Card>
    </Authorized>
</AuthorizeView>

@code {
