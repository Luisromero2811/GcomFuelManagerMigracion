@code {
    public bool Synthesis { get; set; } = false;

    //grid
    private RadzenDataGrid<OrdenEmbarque>? grid = new RadzenDataGrid<OrdenEmbarque>();
    private ElementReference dpT;

    private OrdenEmbarque ordenEmbarque { get; set; } = null!;
